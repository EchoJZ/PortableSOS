<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/background_v5"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_actionbar"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:text="个人中心"
                android:textSize="@dimen/font_actionbar"
                android:textColor="#FFFFFF"/>

            <ImageView
                android:id="@+id/home_setting"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/home_setting"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_to_actionbar"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_alignBottom="@id/h_back"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/frgm_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:text="Bias"/>

                <TextView
                    android:id="@+id/frgm_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_below="@id/frgm_user_name"
                    android:text="182****5882"
                    android:textColor="#95FFFFFF" />

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/head"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/home_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mydetails"
            android:drawablePadding="20dp"
            android:layout_marginTop="@dimen/space_home_select"
            android:textSize="@dimen/font_home_select"
            android:text="我的资料(xml)"
            android:textColor="#2E2E2E"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="0.5dp"
            android:background="#405F5454" />

        <TextView
            android:id="@+id/home_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/contact"
            android:drawablePadding="20dp"
            android:layout_marginTop="@dimen/space_home_select"
            android:textSize="@dimen/font_home_select"
            android:text="我的紧急联系人(xml）"
            android:textColor="#2E2E2E"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="0.5dp"
            android:background="#405F5454" />

        <TextView
            android:id="@+id/home_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/site"
            android:drawablePadding="20dp"
            android:layout_marginTop="@dimen/space_home_select"
            android:textSize="@dimen/font_home_select"
            android:text="我的位置(xml)"
            android:textColor="#2E2E2E"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="25dp"
            android:layout_height="0.5dp"
            android:background="#405F5454" />

        <TextView
            android:id="@+id/home_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/help"
            android:drawablePadding="20dp"
            android:layout_marginTop="@dimen/space_home_select"
            android:textSize="@dimen/font_home_select"
            android:text="帮助(xml)"
            android:textColor="#2E2E2E"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="0.5dp"
            android:background="#405F5454" />

        <TextView
            android:id="@+id/home_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/aboutus"
            android:drawablePadding="20dp"
            android:layout_marginTop="@dimen/space_home_select"
            android:textSize="@dimen/font_home_select"
            android:text="关于我们(xml)"
            android:textColor="#2E2E2E"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="0.5dp"
            android:background="#405F5454" />
    </LinearLayout>

</LinearLayout>