<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".begin.begin_register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_details_head"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/begin_login"
            android:scaleType="fitXY">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="200dp">


            <EditText
                android:layout_marginTop="60dp"
                android:id="@+id/begin_register_name"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:hint="用户名"
                />
            <EditText
                android:id="@+id/begin_register_phone"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:hint="邮箱"
                />
            <EditText
                android:id="@+id/begin_register_password"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:hint="密码"
                />
            <EditText
                android:id="@+id/begin_register_verification"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:hint="验证码"
                />
            <Button
                android:id="@+id/begin_register_getVcode"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="获取验证码"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="#D25CE7"/>

            <Button
                android:id="@+id/begin_register"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="注册"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="#D25CE7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="接受服务条款并同步该账号的信息。"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>